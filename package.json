    "@opam/ocurl": "*",
    "@opam/ocamlrss": "*",
    "@jaredly/omd": "jaredly/omd",

    "@opam/dune": "*",
    "@esy-ocaml/reason": "*",
    "@opam/ocaml-migrate-parsetree": "*",
    "@opam/ppx_tools_versioned": "*",
    "@opam/ppx_tools": "*",
    "@opam/ppxlib": "*",
    "rex-json": "*",
    "ocaml": "~4.7.2"
  },
  "peerDependencies": {
    "ocaml": "~4.6.0"
  },
  "devDependencies": {
    "ocaml": "~4.6.0"
  }
}
