{
  "name": "esy-reason-project",
  "version": "1.0.0",
  "description": "My website",
  "scripts": {
    "test": "esy build && esy jbuilder exec Hello",
    "start": "watchexec -w lib -w bin npm test",
    "publish": "esy jbuilder exec hello && rsync -r test/pages/ test/publish && rsync -r test/images/ test/publish/images && rsync -r test/assets/ test/publish/assets"
  },
  "esy": {
    "build": [
      [
        "refmterr",
        "jbuilder",
        "build"
      ]
    ],
    "install": [
      "esy-installer"
    ],
    "buildsInSource": "_build"
  },
  "dependencies": {
    "@esy-ocaml/esy-installer": "^0.0.0",
    "@opam/ezjsonm": "*",
    "@opam/jbuilder": "1.0+beta14",
    "@opam/reason": "^3.0.0",
    "@opam/yojson": "*",
    "@opam/ocurl": "*",
    "@opam/ocamlrss": "*",
    "@jaredly/omd": "1.0.0",
    "refmterr": "^3.0.4"
  },
  "peerDependencies": {
    "ocaml": "~4.6.0"
  },
  "devDependencies": {
    "ocaml": "~4.6.0"
  }
}
